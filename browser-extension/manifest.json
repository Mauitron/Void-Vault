{
  "manifest_version": 3,
  "name": "Void Vault",
  "version": "0.1.0",
  "description": "Deterministic password generator",
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/normalizer.js",
        "scripts/domain-shift.js",
        "scripts/content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}