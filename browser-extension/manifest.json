{
  "manifest_version": 3,
  "name": "Void Vault",
  "version": "0.1.0",
  "description": "Deterministic password generator from the Starwell Project - generates unique passwords without storage",

  "permissions": [
    "nativeMessaging",
    "activeTab",
    "storage",
    "tabs"
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
